<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleWeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">#4D000000</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="IconButtom">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">25dp</item>
    </style>
    <style name="MainTextViewStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DiviaderStyle">
        <item name="backgroundColor">@color/divaderColor</item>
    </style>

    <style name="AddintionalWheatherInformationStyle" parent="MainTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>