<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.google.android.material.textview.MaterialTextView
        style="@style/MainTextViewStyle"
        android:id="@+id/item_hourly_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:text="19:00"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainTextViewStyle"
        android:id="@+id/item_hourly_temp_tv"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:text="20\u00B0"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_hourly_weather_condition_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_outline_wb_sunny_24"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            style="@style/MainTextViewStyle"
            android:layout_gravity="center"
            android:id="@+id/item_hourly_pop_tv"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:text="20%"/>



    </LinearLayout>



</LinearLayout>
</androidx.cardview.widget.CardView>